<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
<style>
    body{ background-color:#FFD59E; }
    h1{
        font-size:50px;
        color: #333C83;
    }
    input{
        width:45%;
        border: 10px solid white;
        padding-left: 10px;
        margin-left: 20%;
        border-radius: 25px;
    }
    .info{
        margin: auto;
        color: #064635;
        text-align: center;
        display: grid;
        gap: 1rem;
        padding-inline: 2rem;
        max-width: 60rem;
    }
    .center {
        display: block;
        margin-left: auto;
        margin-right: auto;
    }
    .toggle{
        float: right;
        border-radius: 25px;
        background-color: white;
        border:5px solid white ;
    }
    .readinfo{
        font-size:20px;
        display: grid;
        gap:0.5rem;
        max-width: 60rem;
    }
    .dark-body{
        background-color:#162447;
        color: #E43F5A;
    }
    .dark-info{color: #E43F5A ;}
    .dark-button{
        background-color: #4D4C7D;
        border-color: #4D4C7D;
        color: white;
    }
    ul{
        list-style-type: none;
        font-size:28px;
        line-height:2 ;
    }
</style>
    <title>Anime/Manga Search Engine</title>
</head>
<body>
    <button id="toggle" class="toggle">Dark-Mode</button>
    </div>
    <div id="addinfo">  
        <h1 align="center">Information</h1>
            <div class="savage">
                <%Content.forEach(info=>{%>
                    <ul class="readinfo">
                        <li><b>Name:</b> <%=info.Name%></li>
                        <li><b>Description:</b> <%=info.Description%></li>
                        <li><b>Birthday:</b> <%=info.Birthday%></li>
                        <li><b>Alternative Name:</b> <%=info.Alternative_Name%></li>
                        <li><b>BackStory:</b> <%=info.Backstory%></li>
                        <li><b>Anime or Manga Name:</b> <%=info.Anime_OR_Manga%></li>
                    </ul>
                <%})%>
            </div>
    </div>
    <br>
    <div id="info" class="info">
        <div id="choose"></div>
            

    </div>
        <!-- <div id =collapse> </div> -->

        <div id="tweet"></div>
        <h2 align="center"></h2>
        <img width="250px" class="center" src="">
        <img src="" id="wiki">
        <span><ul></ul></span>
        <h3></h3>
        <h4></h4>
        <h4 id="type"></h4>
    </div>

</body>
<script>
    //Dark Mode Toggle
    let dark=document.getElementById('toggle');
    dark.addEventListener('click',function(){
        document.body.classList.toggle('dark-body');
        document.querySelector('h1').classList.toggle('dark-body');
        document.querySelector('.info').classList.toggle('dark-info');
        document.querySelector('.toggle').classList.toggle('dark-button');
    })
</script>

</html>